.row
  .col-md-4
    - if current_user.upcoming_rsvps 
      %h3 Upcoming Events
      .upcoming_rsvps
        - current_user.upcoming_rsvps.each do |event|
          .li.upcoming_rsvp
            .row
              .col-md-4
                %h4= event.name
              .col-md-4
                %h4= event.date_time
            .row
              .col-md-4
                .thumbnail
                  %img{:alt => "...", :src => "..."}
              .col-md-8= event.description_truncated
  .col-md-4
    - if current_user.has_groups?
      %h3 Groups
      - current_user.groups.each do |group|
        %h1= group.name